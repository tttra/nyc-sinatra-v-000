<h1>Create a new figure:</h1>
<br></br>
<form action="/figures" method="POST">
  <input type="text" name="figure[name]" value="Figure's name" id="figure_name">
  <br></br>
  <p>Choose his/her title(s):</p>
  <%Title.all.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id='title_<%=title.id%>'><%=title.name%></input>
  <%end%>
  <input type="text" name="title[name]" id="new_title" value="and/or create a new title:">
  <br></br>
  <p>Choose his/her landmark(s):</p>
  <%Landmark.all.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id='landmark_<%=landmark.id%>'><%=landmark.name%></input>
  <%end%>
  <input type="text" name="landmark[name]" value="and/or create a new landmark" id="new_landmark">
  <br></br>
  <input type="submit" id="Create New Figure" value="Create New Figure">
</form>